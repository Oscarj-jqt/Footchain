    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "hardhat/types",
    "artifacts/contracts/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts"
  ]
}
